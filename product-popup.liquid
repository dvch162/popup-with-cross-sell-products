<div class="popup-container" id="popup-container" style="display: none;">
  <div class="popup-wrapper">
    <!-- Left column: Product Image -->
    <div class="popup-left">
      {% comment %} <img src="{{ product.images.first | image_url: 300 }}" alt="{{ product.title }}" width="400" height="400"> {% endcomment %}

    {% if product.featured_image != blank %}
        <img src="{{ product.featured_image | image_url: 300 }}" alt="{{ product.title }}" width="400" height="400">
      {% else %}
        <img src="{{ product.images.first | image_url: 300 }}" alt="{{ product.title }}" width="400" height="400">
      {% endif %} 
      
    </div>
    
    <!-- Right column: Product Content -->
    <div class="popup-content">
      {% for block in section.blocks %}
        {% if block.type == 'popup' and block.settings.popup_heading %}
          <h2>{{ block.settings.popup_heading | escape }}</h2>
        {% endif %}
      {% endfor %}

      <p>You are trying to add <strong>{{ product.title }}</strong> to the cart.</p>
      <p>Complete your look and save <strong>$13!</strong></p>
      
      <div class="suggested-items">
        <!-- Example Suggested Item 1 -->
        {% for block in section.blocks %}

         {% if block.settings.suggested_item_1 %}
          {%  assign product_one = all_products[block.settings.suggested_item_1] %}
        <div class="item">
          <img src="{{ product_one.featured_image | img_url: 'medium' }}" alt="{{ product_one.title }}">
          <p>{{ product_one.title }}</p>
          <p><span class="old-price">{{ product_one.compare_at_price | money }}</span> <strong>{{ product_one.price | money }}</strong></p>
           </div>
        {% endif %}


        <!-- Example Suggested Item 2 -->
        {% if block.settings.suggested_item_2 %}
          {% assign product_two = all_products[block.settings.suggested_item_2] %}
        <div class="item">
          <img src="{{ product_two | img_url: 'medium' }}" alt="{{ product_two.title }}">
          <p>{{ product_two.title }}</p>
          <p><span class="old-price">{{ product_two.compare_at_price | money }}</span> <strong>{{ product_two.price | money }}</strong></p>
         
        </div>
        {% endif %}
      {% endfor %}

      </div>
      
      <div class="popup-actions">
        <button class="add-to-cart-btn" id="addToCartBtn">Add to Cart</button>
        <button class="continue-cart-btn" id="continueToCartBtn">Continue to the Cart</button>
      </div>
    </div>
  </div>
</div>

<style>
/* Styling the popup container */
.popup-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

/* Popup wrapper for two-column layout */
.popup-wrapper {
  display: flex;
  background: #fff;
  /* border-radius: 10px; */
  overflow: hidden;
  width: 800px;
}

/* Left column: Image */
.popup-left {
  flex: 1;
  padding: 0px;
}

.popup-left img {
  width: 100%;
  height: 100%;
  /* border-radius: 8px; */
}

/* Right column: Content */
.popup-content {
  flex: 1;
  padding: 0 10px;
  text-align:left;
}

/* Styling for suggested items */
.suggested-items .item {
  display: flex;
  margin: 5px 0px;
}

.suggested-items .item img {
  width: 30%;
  height: 40%;
}

.suggested-items .item p {
  padding-left: 5%;
}

.old-price {
  text-decoration: line-through;
  color: grey;
}

.popup-actions {
  margin: 0 20px;
  padding: 0;
}

.add-to-cart-btn {
  background-color: #003366;
  color: white;
  padding: 10px 20px;
  margin: 20px ;
  cursor: pointer;
  border: none;
  border-radius: 5px;
}

.continue-cart-btn {
  background-color: white;
  color: #003366;
  padding: 10px 20px;
  /* margin: 10px; */
  cursor: pointer;
  /* border: none; */
  border-radius: 5px;
  border-color: #003366;
}
</style>
{% for block in section.blocks %}
{% endfor %}
  


